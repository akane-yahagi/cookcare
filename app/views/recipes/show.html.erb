<body>
    <div class="nav">
        <%= link_to "Cookcare", recipes_path, class: "title" %>
    </div>
    <div class="recipe-wrapper clearfix">
        <div class="side-container"></div>
        <div class="main-container">
            <div class="recipe-section clearfix">
                <div class="recipe-left-section">
                    <div class="title-box">
                        <p>Title</p>
                        <%= @recipe.title %>
                    </div>
                    <div class="info-box clearfix">
                        <div class="info-left-box">
                            <div class="show-username-box">
                                <p>Username</p>
                                <%= @recipe.user.name%>
                            </div>
                            <div class="image-box">
                                <p>Photo</p>
                                <%= image_tag @recipe.recipe_image.url if @recipe.recipe_image? %>
                            </div>
                        </div>
                        <div class="memo-box">
                            <p>Memo</p>
                        </div>
                    </div>
                    <div class="show-ingredient-box">
                        <p>Ingredients</p>
                        <% @recipe_ingredients.each do |recipe_ingredient| %>
                            <%= recipe_ingredient.ingredient.name %>
                            <%= recipe_ingredient.quantity %><br>
                        <% end %>
                    </div>
                </div>
                
                <div class="recipe-right-section">
                    <div class="category-box">
                        <p>Category</p>
                        <% @categories.each do |category| %>
                            <% @recipe_categories.each do |recipe_category| %>
                                <% if category.name == recipe_category.category.name %>
                                    <div class="show-category-on">
                                        <%= recipe_category.category.name %>
                                    </div>
                                <% else %>
                                    <div class="show-category-off">
                                        <%= category.name %>
                                    </div>
                                <% end %>
                            <% end %>
                        <% end %>
                    </div>
                    <div class="step-box">
                        <p>Steps</p>
                        <% @steps.each do |step| %>
                            <%= step.step %><br>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
<body>
    